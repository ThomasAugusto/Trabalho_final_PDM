<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modulo_Geral_Extrato"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/logo_extrato"
        android:layout_width="200dp"
        android:layout_height="57dp"
        android:src="@drawable/logo_senai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_extrato"
        android:drawableTint="@color/white"
        android:layout_marginTop="40dp"
        android:id="@+id/extrato_mensagem"
        android:text="@string/extrato_mensagem_txt"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <View
        style="@style/ContainerComponentsAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/extrato_mensagem"/>

</androidx.constraintlayout.widget.ConstraintLayout>