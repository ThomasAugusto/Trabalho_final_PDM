<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modulo_Geral_Deposito"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/logo_deposito"
        android:layout_width="200dp"
        android:layout_height="57dp"
        android:src="@drawable/logo_senai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_deposito"
        android:drawableTint="@color/white"
        android:layout_marginTop="40dp"
        android:id="@+id/deposito_mensagem"
        android:text="@string/deposito_mensagem_txt"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <View
        style="@style/ContainerComponentsAccount"
        android:id="@+id/container_deposito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deposito_mensagem"/>

    <EditText
        style="@style/Edit_Text"
        android:id="@+id/input_deposito_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/container_deposito"
        android:hint="Digite o valor que deseja depositar"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_deposito"
        style="@style/Button"
        android:layout_marginTop="84dp"
        android:text="Confirmar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_deposito_value" />


</androidx.constraintlayout.widget.ConstraintLayout>